            <file>media/com_osdownloads/css/frontend.min.css</file>
            <file>media/com_osdownloads/js/jquery.osdownloads.min.js</file>

            <extension type="plugin"
                       group="system"
                       element="osdownloadssystem"/>

            <extension type="plugin"
                       group="content"
                       element="osdownloadsshortcodes"/>
        </obsolete>
    </alledia>
</extension>
