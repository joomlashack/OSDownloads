<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_OSDOWNLOADS_DOWNLOADS_VIEW_DEFAULT_TITLE">
        <message>
            <![CDATA[COM_OSDOWNLOADS_DOWNLOADS_VIEW_DEFAULT_DESC]]>
        </message>
    </layout>

    <fields name="request">
        <fieldset name="request">
            <field name="id"
                   type="category"
                   label="COM_OSDOWNLOADS_CATEGORY"
                   description="COM_OSDOWNLOADS_CATEGORY_DESC"
                   extension="com_osdownloads"
                   required="true"
                   multiple="false"
                   show_root="true"
                   default="0"/>
        </fieldset>
    </fields>

    <fields name="params">
        <fieldset name="basic" label="COM_OSDOWNLOADS_OPTIONS">
            <field name="include_child_files"
                   type="radio"
                   class="btn-group btn-group-yesno"
                   layout="joomla.form.field.radio.switcher"
                   label="COM_OSDOWNLOADS_INCLUDE_FILES_CHILD_CATEGORIES_LABEL"
                   description="COM_OSDOWNLOADS_INCLUDE_FILES_CHILD_CATEGORIES_DESC"
                   default="0">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field name="show_child_categories"
                   type="radio"
                   class="btn-group btn-group-yesno"
                   layout="joomla.form.field.radio.switcher"
                   label="COM_OSDOWNLOADS_CHILD_CATEGORIES_LABEL"
                   description="COM_OSDOWNLOADS_CHILD_CATEGORIES_DESC"
                   default="1">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field name="number_of_column"
                   type="number"
                   validate="number"
                   default="1"
                   min="1"
                   max="8"
                   label="COM_OSDOWNLOADS_NUMBER_OF_COLUMN"/>

            <field name="show_download_count"
                   type="radio"
                   class="btn-group btn-group-yesno"
                   layout="joomla.form.field.radio.switcher"
                   label="COM_OSDOWNLOADS_SHOW_DOWNLOAD_COUNT"
                   default="0">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field name="show_category"
                   type="radio"
                   class="btn-group btn-group-yesno"
                   layout="joomla.form.field.radio.switcher"
                   label="COM_OSDOWNLOADS_SHOW_CATEGORY"
                   default="0">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field name="show_category_filter"
                   type="radio"
                   class="btn-group btn-group-yesno"
                   layout="joomla.form.field.radio.switcher"
                   label="COM_OSDOWNLOADS_SHOW_CATEGORY_FILTER"
                   default="0">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field name="ordering"
                   type="list"
                   layout="joomla.form.field.list-fancy-select"
                   default="ordering"
                   label="COM_OSDOWNLOADS_FILES_FIELD_ORDERING_LABEL"
                   description="COM_OSDOWNLOADS_FILES_FIELD_ORDERING_DESC">
                <option value="doc.ordering">COM_OSDOWNLOADS_FILES_ORDERING</option>
                <option value="doc.name">COM_OSDOWNLOADS_FILES_NAME</option>
                <option value="doc.downloaded">COM_OSDOWNLOADS_FILES_DOWNLOADED</option>
                <option value="doc.created_time">COM_OSDOWNLOADS_FILES_CREATED_TIME</option>
                <option value="doc.modified_time">COM_OSDOWNLOADS_FILES_MODIFIED_TIME</option>
            </field>

            <field name="ordering_dir"
                   type="radio"
                   class="btn-group"
                   label="COM_OSDOWNLOADS_FILES_FIELD_ORDERING_DIR_LABEL"
                   description="COM_OSDOWNLOADS_FILES_FIELD_ORDERING_DIR_DESC"
                   default="asc">
                <option value="asc">COM_OSDOWNLOADS_FILES_ASC</option>
                <option value="desc">COM_OSDOWNLOADS_FILES_DESC</option>
            </field>
        </fieldset>
    </fields>
</metadata>
