<?xml version="1.0" encoding="utf-8"?>
<extension version="3.7" type="component" method="upgrade">
    <name>com_osdownloads</name>
    <author>Joomlashack</author>
    <creationDate>December 17 2018</creationDate>
    <copyright>Copyright (C) 2016-2018 Open Source Training, LLC</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>help@joomlashack.com</authorEmail>
    <authorUrl>https://www.joomlashack.com</authorUrl>
    <version>1.13.5</version>
    <variant>FREE</variant>
    <description>COM_OSDOWNLOADS_DESCRIPTION</description>

    <scriptfile>script.installer.php</scriptfile>

    <files folder="site">
        <folder>language</folder>
        <folder>layouts</folder>
        <folder>models</folder>
        <folder>tables</folder>
        <folder>views</folder>
        <filename>controller.php</filename>
        <filename>osdownloads.php</filename>
        <filename>router.php</filename>
        <filename>sef_ext.php</filename>
    </files>

    <media destination="com_osdownloads" folder="media">
        <folder>css</folder>
        <folder>files</folder>
        <folder>fonts</folder>
        <folder>images</folder>
        <folder>js</folder>
    </media>

    <administration>
        <menu img="class:component">COM_OSDOWNLOADS</menu>
        <submenu>
            <menu link="option=com_osdownloads&amp;view=files"
                view="files"
                img="class:component"
                alt="OSDownloads/Files">COM_OSDOWNLOADS_FILES</menu>

            <menu link="option=com_categories&amp;extension=com_osdownloads"
                view="categories"
                img="class:component"
                alt="OSDownloads/Categories">COM_OSDOWNLOADS_CATEGORIES</menu>

            <menu link="option=com_osdownloads&amp;view=emails"
                view="emails"
                img="class:component"
                alt="OSDownloads/Emails">COM_OSDOWNLOADS_EMAILS</menu>
        </submenu>

        <files folder="admin">
            <folder>controllers</folder>
            <folder>form</folder>
            <folder>helpers</folder>
            <folder>language</folder>
            <folder>library</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>vendor</folder>
            <folder>views</folder>
            <filename>abstract.script.installer.php</filename>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>include.php</filename>
            <filename>osdownloads.php</filename>
        </files>
    </administration>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install/mysql/install.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/install/mysql/uninstall.sql</file>
        </sql>
    </uninstall>

    <update>
        <schemas>
            <schemapath type="mysql" charset="utf8">sql/updates/mysql</schemapath>
        </schemas>
    </update>

    <updateservers>
        <server type="extension" priority="1" name="OSDownloads"><![CDATA[https://deploy.ostraining.com/client/update/free/stable/com_osdownloads]]></server>
    </updateservers>

    <alledia>
        <element>osdownloads</element>
        <namespace>OSDownloads</namespace>
        <license>free</license>
        <targetplatform>3.7</targetplatform>
        <phpminimum>5.6</phpminimum>
        <previousminimum>1.7.2</previousminimum>

        <include>AllediaFreeDefaultFiles</include>

        <relatedExtensions>
            <extension type="library"
                element="allediaframework">AllediaFramework</extension>

            <extension type="module"
                element="osdownloadsfiles"
                uninstall="true"
                downgrade="true">OSDownloadsFiles</extension>

            <extension type="plugin"
                group="system"
                element="ossystem"
                publish="true"
                ordering="first">OSSystem</extension>

            <extension type="plugin"
                group="content"
                element="osdownloads"
                publish="true"
                downgrade="true"
                uninstall="true">plg_content_osdownloads</extension>
        </relatedExtensions>

        <minify suffix=".min">
            <scripts destination="media/js/jquery.osdownloads.bundle.js">
                <script>media/js/jquery.browser.js</script>
                <script>media/js/jquery.iframe-auto-height.js</script>
                <script>media/js/jquery.reveal.js</script>
                <script>media/js/jquery.osdownloads.js</script>
            </scripts>
        </minify>

        <obsolete>
            <file>administrator/components/com_osdownloads/views/file/tmpl/default.j2.php</file>
            <file>administrator/components/com_osdownloads/views/files/tmpl/default.j2.php</file>
            <file>administrator/components/com_osdownloads/views/installer/tmpl/default_custom.php</file>
            <file>administrator/language/en-GB/en-GB.com_osdownloads.ini</file>
            <file>administrator/language/en-GB/en-GB.com_osdownloads.sys.ini</file>
            <file>administrator/language/en-GB/en-GB.plg_editors-xtd_osdownseditorxtdfile.ini</file>
            <file>administrator/language/en-GB/en-GB.plg_editors-xtd_osdownseditorxtdfile.sys.ini</file>
            <file>administrator/language/en-GB/en-GB.plg_system_osdownloadssystem.ini</file>
            <file>administrator/language/en-GB/en-GB.plg_system_osdownloadssystem.sys.ini</file>
            <file>administrator/language/fa-IR/fa-IR.com_osdownloads.ini</file>
            <file>administrator/language/fa-IR/fa-IR.com_osdownloads.sys.ini</file>
            <file>administrator/language/fa-IR/fa-IR.plg_editors-xtd_osdownseditorxtdfile.ini</file>
            <file>administrator/language/fa-IR/fa-IR.plg_editors-xtd_osdownseditorxtdfile.sys.ini</file>
            <file>administrator/language/fa-IR/fa-IR.plg_system_osdownloadssystem.ini</file>
            <file>administrator/language/fa-IR/fa-IR.plg_system_osdownloadssystem.sys.ini</file>
            <file>administrator/language/fr-FR/fr-FR.com_osdownloads.ini</file>
            <file>administrator/language/fr-FR/fr-FR.com_osdownloads.sys.ini</file>
            <file>administrator/language/fr-FR/fr-FR.plg_editors-xtd_osdownseditorxtdfile.ini</file>
            <file>administrator/language/fr-FR/fr-FR.plg_editors-xtd_osdownseditorxtdfile.sys.ini</file>
            <file>administrator/language/fr-FR/fr-FR.plg_system_osdownloadssystem.ini</file>
            <file>administrator/language/fr-FR/fr-FR.plg_system_osdownloadssystem.sys.ini</file>
            <file>components/com_osdownloads/views/download/tmpl/error_not_available.php</file>
            <file>components/com_osdownloads/views/download/tmpl/error_too_big.php</file>
            <file>language/en-GB/en-GB.com_osdownloads.ini</file>
            <file>language/en-GB/en-GB.com_osdownloads.sys.ini</file>
            <file>language/fa-IR/fa-IR.com_osdownloads.ini</file>
            <file>language/fa-IR/fa-IR.com_osdownloads.sys.ini</file>
            <file>language/fr-FR/fr-FR.com_osdownloads.ini</file>
            <file>language/fr-FR/fr-FR.com_osdownloads.sys.ini</file>
            <file>media/com_osdownloads/css/frontend.min.css</file>
            <file>media/com_osdownloads/js/jquery.osdownloads.min.js</file>
        </obsolete>
    </alledia>
</extension>
