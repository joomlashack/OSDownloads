<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade">
    <name>com_osdownloads</name>
    <author>Joomlashack</author>
    <authorEmail>help@joomlashack.com</authorEmail>
    <authorUrl>https://www.joomlashack.com/</authorUrl>
    <copyright>Copyright 2005-2021 Joomlashack.com</copyright>
    <license>GNU GPL; see LICENSE file</license>
    <description>COM_OSDOWNLOADS_DESCRIPTION</description>
    <version>2.0.0</version>
    <creationDate>August 23 2021</creationDate>
    <variant>FREE</variant>

    <scriptfile>script.installer.php</scriptfile>

    <files folder="site">
        <folder>helpers</folder>
        <folder>language</folder>
        <folder>layouts</folder>
        <folder>models</folder>
        <folder>tables</folder>
        <folder>views</folder>

        <filename>controller.php</filename>
        <filename>osdownloads.php</filename>
        <filename>router.php</filename>
    </files>

    <media destination="com_osdownloads" folder="media">
        <folder>css</folder>
        <folder>files</folder>
        <folder>images</folder>
        <folder>js</folder>
    </media>

    <administration>
        <menu>COM_OSDOWNLOADS</menu>
        <submenu>
            <menu view="files">COM_OSDOWNLOADS_FILES</menu>
            <menu link="option=com_categories&amp;extension=com_osdownloads">COM_OSDOWNLOADS_CATEGORIES</menu>
            <menu view="emails">COM_OSDOWNLOADS_EMAILS</menu>
        </submenu>

        <files folder="admin">
            <folder>controllers</folder>
            <folder>form</folder>
            <folder>helpers</folder>
            <folder>language</folder>
            <folder>library</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>vendor</folder>
            <folder>views</folder>

            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>include.php</filename>
            <filename>osdownloads.php</filename>
        </files>
    </administration>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install/mysql/install.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/install/mysql/uninstall.sql</file>
        </sql>
    </uninstall>

    <update>
        <schemas>
            <schemapath type="mysql" charset="utf8">sql/updates/mysql</schemapath>
        </schemas>
    </update>

    <updateservers>
        <server type="extension" priority="1" name="OSDownloads Free"><![CDATA[https://deploy.ostraining.com/client/update/free/stable/com_osdownloads]]></server>
    </updateservers>

    <alledia>
        <element>osdownloads</element>
        <namespace>OSDownloads</namespace>
        <license>free</license>
        <targetplatform>3.9</targetplatform>
        <phpminimum>7.2.5</phpminimum>
        <previousminimum>1.7.2</previousminimum>

        <relatedExtensions>
            <extension type="library"
                       element="allediaframework">ShackFramework</extension>

            <extension type="plugin"
                       group="system"
                       element="osmylicensesmanager"
                       publish="true"
                       ordering="last">ShackExtensionSupport</extension>

            <extension type="module"
                       element="osdownloadsfiles"
                       uninstall="true"
                       downgrade="true">OSDownloadsFiles</extension>

            <extension type="plugin"
                       group="content"
                       element="osdownloads"
                       publish="true"
                       downgrade="true"
                       uninstall="true">plg_content_osdownloads</extension>
        </relatedExtensions>

        <include>ShackDefaultFiles</include>

        <minify suffix=".min">
            <scripts destination="media/js/jquery.osdownloads.bundle.js">
                <script>media/js/jquery.browser.js</script>
                <script>media/js/jquery.iframe-auto-height.js</script>
                <script>media/js/jquery.reveal.js</script>
                <script>media/js/jquery.osdownloads.js</script>
            </scripts>
        </minify>

        <obsolete>
            <folder>administrator/components/com_osdownloads/models/abstract</folder>
            <folder>administrator/components/com_osdownloads/vendor/guzzlehttp/promises</folder>
            <folder>administrator/components/com_osdownloads/vendor/guzzlehttp/psr7</folder>
            <folder>administrator/components/com_osdownloads/vendor/ralouphie</folder>
            <folder>administrator/components/com_osdownloads/vendor/symfony/contracts</folder>
            <folder>components/components/com_osdownloads/layouts/buttons</folder>

